
{
  "manifest_version": 3,
  "name": "AI Tool Recommender",
  "version": "1.0",
  "description": "Recommends the best AI tool for your task and builds optimised prompts",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:7700/*"],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon3.png"
  },
 

  "web_accessible_resources": [
    {
      "resources": ["tools.json"],
      "matches": ["<all_urls>"]
    }
  ]


}